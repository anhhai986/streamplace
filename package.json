{
  "name": "streamplace-root-pkg",
  "version": "0.1.10",
  "description": "An open-source toolkit for compositing live video streams in the cloud",
  "main": "package.json",
  "jest": {
    "bail": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/packages/"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add",
      "eslint"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-streamplace": "0.0.3",
    "depcheck": "^0.6.9",
    "dot-object": "^1.5.4",
    "eslint": "^4.11.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.1.0",
    "get-stdin": "^5.0.1",
    "husky": "^0.13.3",
    "inquirer": "^3.0.4",
    "jest": "^20.0.4",
    "js-yaml": "^3.8.1",
    "kube-for-mac": "^0.1.0",
    "lerna": "^2.5.1",
    "lint-staged": "^4.0.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.2",
    "opn": "^5.3.0",
    "opn-cli": "^3.1.0",
    "prettier": "^1.10.2",
    "superagent": "^3.5.0",
    "swagger-client": "^2.1.32",
    "temp": "^0.8.3",
    "tmp-promise": "^1.0.3",
    "wheelhouse": "next",
    "winston": "^2.3.1"
  },
  "scripts": {
    "apply": "run-s dev-client:env-override docker-build-dev",
    "build-values-dev": "node run/build-values-dev.js",
    "ci-build-app": "run/ci-build-app.sh",
    "conformance-tests": "run/conformance-tests.sh",
    "dev-client:env-override": "babel-node packages/sp-configuration/src/build-env-override.js values-dev.example.yaml",
    "dev-client:start": "npx lerna exec --concurrency=999 --no-sort --include-filtered-dependencies --scope sp-native --scope sp-frontend --scope sp-app npm run start",
    "dev-client": "run-s dev-client:env-override dev-client:start",
    "docker-build-ci": "run-s docker-build-ci:env-override docker-build-node docker-build-root docker-build-packages-ci",
    "docker-build-ci:env-override": "babel-node packages/sp-configuration/src/build-env-override.js values-next.yaml",
    "docker-build-dev": "run/generate-dockerfile.js --dev",
    "docker-build-node": "cd packages/sp-node && docker build -t stream.place/sp-node .",
    "docker-build-packages-ci": "lerna exec 'if [ -f Dockerfile ]; then ../../run/package-log.sh docker build -t stream.place/$(basename $PWD) .; fi'",
    "docker-build-packages-dev": "lerna exec --ignore sp-frontend --ignore sp-auth-frontend --ignore sp-overlay 'if [ -f Dockerfile ]; then ../../run/package-log.sh docker build -t stream.place/$(basename $PWD) .; fi'",
    "docker-build-root": "run/generate-dockerfile.js",
    "docker-build": "run-s docker-build-node docker-build-root docker-build-packages-dev",
    "docker-push": "run/every-package.sh run/package-docker-push.sh --concurrency=999",
    "helm-dev": "run/helm-dev.sh",
    "helm-lint": "run/every-package.sh run/helm-lint.sh --concurrency=999",
    "helm-push": "run/helm-push.sh",
    "kube-init": "run/kube-init.sh",
    "link-deps": "run/link-deps.sh",
    "lint": "run/lint.sh",
    "logs": "opn 'http://localhost:5601/app/logtrail#/?q=kubernetes.namespace_name:%20default&h=All&t=Now&i=logstash-*&_g=()'",
    "precommit": "CI=true lint-staged && run/pre-commit.sh",
    "start": "run/start.sh",
    "test": "CI=true run/every-package.sh npm run test --concurrency=999",
    "update-cert": "run/update-cert.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/streamplace/streamplace"
  },
  "author": "Streamplace",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "babel": {
    "presets": [
      "streamplace"
    ]
  }
}
